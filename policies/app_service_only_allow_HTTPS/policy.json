{
  "name": "app_service_only_allow_HTTPS",
  "properties": {
    "displayName": "App Service apps should only be accessible over HTTPS",
    "policyType": "BuiltIn",
    "mode": "Indexed",
    "description": "Use of HTTPS ensures server/service authentication and protects data in transit from network layer eavesdropping attacks.",
    "metadata": {
      "version": "4.0.0",
      "category": "App Service"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Disabled", "Deny"],
        "defaultValue": "Audit"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            "field": "kind",
            "notContains": "functionapp"
          },
          {
            "anyOf": [
              {
                "field": "Microsoft.Web/sites/httpsOnly",
                "exists": "false"
              },
              {
                "field": "Microsoft.Web/sites/httpsOnly",
                "equals": "false"
              },
              {
                "not": {
                  "field": "tags",
                  "containsKey": "[concat('policy_exemption_', parameters('group'))]"
                }
              },
              {
                "not": {
                  "field": "tags",
                  "containsKey": "[concat('policy_exemption_', parameters('group'), '_', parameters('policy'))]"
                }
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Web/sites/",
          "existenceCondition": {
            "field": "Microsoft.Web/sites/httpsOnly",
            "exists": "true"
          }
        }
      }
    }
  },
  "id": "/providers/Microsoft.Authorization/policyDefinitions/a4af4a39-4135-47fb-b175-47fbdf85311d",
  "type": "Microsoft.Authorization/policyDefinitions"
}
